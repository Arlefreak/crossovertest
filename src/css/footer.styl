footer
    width 100%
    width 100%
    height 15vh
    padding 2vh 0 2vh 0
    background $color2
    box-sizing border-box
    display block
    position fixed
    bottom 0
    left 0
    @media screen and (max-width: 820px)
        height 5vh
        padding 0 0 1vh 0
    .wrapper
        vertical-align middle
        position relative
    p
        font-size 0.6em
        width 50%
        color $gray3
        display inline-block
        line-height 1.5em
        padding 2% 0 2% 0
    ul
        width 20%
        display inline-block
        box-sizing border-box
        padding 2% 0 2% 0
        position absolute
        top 50%
        right 0%
        transform translate(0,-50%)
        li
            display inline-block
        @media screen and (max-width: 820px)
            width 100%
            text-align center
            position inherit
            transform translate(0,0)
    a
        color $gray2
        transition color 0.5s ease
        &:hover
        .active
            color $color1

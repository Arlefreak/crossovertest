header
    width 100%
    height 15vh
    padding 2vh 0 2vh 0
    display block
    position fixed
    background $color2
    box-sizing border-box
    top 0
    left 0
    z-index 1
    .logo
        display inline-block
        max-width 100%
        height auto
    h1
        display inline-block
        font-size 1.2em
        font-weight 200
        margin 0 20px 0
        padding 5px 0 15px 0
        color $gray2
        text-align right
        vertical-align top

{
    "parser": "babel-eslint",
        "env": {
            "browser": true,
            "node": true
        },
        "settings": {
            "ecmascript": 6,
            "jsx": true
        },
        "plugins": [
            "react"
        ],
        "ecmaFeatures": {
            "jsx": true
        },
        "extends": "eslint:recommended",
        "rules": {
            "strict": 0,
            "indent": [2, 4, {"SwitchCase": 1}],
            "linebreak-style": [2, unix],
            "semi": [2, always],
            "quotes": [2, 'single'],
            "camelcase": 1,
            "no-console": 0,
            "react/jsx-uses-react": 1
        }
}
